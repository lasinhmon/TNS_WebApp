<script>
    function LoadDataInfo_Ajax() {

        var zUserID = $("#txt_UserID").val();
        var zMonthView = $('#MonthView').find(":selected").val();
        var zYearView = $('#YearView').find(":selected").val();

        var zDataRequest = { "userID": zUserID, "monthView": zMonthView, "yearView": zYearView };
        var Icon_Waiting = "<div class='spinner-border text-primary spinner-border-sm' role='status'>";
        Icon_Waiting += "<span class='sr-only'> Loading...</span>";
        Icon_Waiting += "</div>";
        $("#btn_Search").html(Icon_Waiting);

        $.ajax({
            type: 'POST',
            url: "/KPI_Accounting/Personal?handler=LoadDataInfo",
            data: JSON.stringify(zDataRequest),
            contentType: "application/json",
            dataType: "json",
        })
            .done(function (dataResponse) {
                //$("#txt_MessageLog").html(JSON.stringify(dataResponse));
                Display_Info(dataResponse);
                $("#btn_Search").html("<i class='fas fa-search'></i>");
            })
            .fail(function (error) {
                alert('Error : ' + error.responseText);
            });
    }
    function Display_Info(DataView) {
        $("#lbl_UserName").html("<b>" + DataView.id + "</b>");
        $("#lbl_EmployeeName").html("<b>" + DataView.name + "</b>");
        $("#lbl_WorkingAtCounter").html("<b>" + DataView.workingAtCounter + "</b>");
        $("#lbl_WorkingAtCounter_1").html("<b>" + DataView.workingAtCounter_1 + "</b>");
        $("#lbl_WorkingAtCounter_2").html("<b>" + DataView.workingAtCounter_2 + "</b>");
        var n = DataView.tieuChi_TongButToan.length;

        for (i = 1; i < n; i++) {
            $("#lbl_TieuChi_TongButToan_" + i).html("<b>" + DataView.tieuChi_TongButToan[i] + "</b>");
            $("#lbl_TieuChi_ButToanXuLy_" + i).html("<b>" + DataView.tieuChi_ButToanXuLy[i] + "</b>");
        }
    }
</script>
<script>

    function LV_LoadPhuLuc_Ajax(CategoryID, Status) {

        $("#LV_Waiting").css("display", "");
        $("#LV_DataBody").html("");

        var zUserID = $("#txt_UserID").val();
        var zMonthView = $('#MonthView').find(":selected").val();
        var zYearView = $('#YearView').find(":selected").val();

        var zDataRequest = { "userID": zUserID, "monthView": zMonthView, "yearView": zYearView, "categoryID": CategoryID, "status": Status };

        $.ajax({
            type: 'POST',
            url: "/KPI_Accounting/Personal?handler=LoadPhuLuc",
            data: JSON.stringify(zDataRequest),
            contentType: "application/json",
            dataType: "json",
        })
            .done(function (dataResponse) {
                //$("#txt_MessageLog").html(JSON.stringify(dataResponse));
                LV_Display_PhuLuc(dataResponse, Status);
                $("#LV_Waiting").css("display", "none");
            })
            .fail(function (error) {
                alert('Error : ' + error.responseText);
            });
    }
    function LV_Display_PhuLuc(DataView, Status) {
        var zContent = "";
        var zHeader = "";
        var k = 0;
        var zStyle_RecordView = "";
        k = DataView.fieldsName.length;

        zHeader += "<tr>";
        zHeader += "    <th class='text-center text-light bg-primary align-middle'> STT </th>";
        for (i = 0; i < k; i++) {
            zHeader += "    <th class='text-center text-light bg-primary align-middle'> " + DataView.fieldsName[i] + "</th>";
        }
        zHeader += "</tr>";
        $("#LV_DataHeader").html(zHeader);

        var n = DataView.dataOfTable.length;
        var zView = 0;
        for (i = 0; i < n; i++) {
            zContent += "       <tr style='cursor:pointer' onclick='Modal_PhuLucItem_Ajax(\"" + DataView.dataOfTable[i][0] + "\",\"" + Status + "\")'>";
            zContent += "           <td style='" + zStyle_RecordView + "'>" + (i + 1) + " </div>";
            zContent += "           </td>";
            for (j = 1; j < 4; j++) {
                zContent += "           <td style='" + zStyle_RecordView + "'>" + DataView.dataOfTable[i][j] + "</td>";
            }
            zContent += "           <td class='text-end' style='" + zStyle_RecordView + "'>" + DataView.dataOfTable[i][4] + "</td>";
            zContent += "           <td class='text-end' style='" + zStyle_RecordView + "'>" + DataView.dataOfTable[i][5] + "</td>";

            zContent += "       </tr>";


        }

        $("#LV_DataBody").html(zContent);
        $("#txt_MessageLog").text(zContent);

    }

</script>
<script>
    function Modal_Selected_Ajax() {
        var zMonthView = $('#MonthView').find(":selected").val();
        var zYearView = $('#YearView').find(":selected").val();
        var zDataRequest = { "monthView": zMonthView, "yearView": zYearView };

        $("#Modal_Selected_Title").text("Chọn nhân viên xem trong " + zMonthView + "-" + zYearView);
        $("#Modal_Selected_Form").modal('show');
        $("#Modal_Selected_Waiting").css("display", "");
        $.ajax({
            type: 'POST',
            url: "/KPI_Accounting/Personal?handler=CollectData",
            data: JSON.stringify(zDataRequest),
            contentType: "application/json",
            dataType: "json",
        })
            .done(function (dataResponse) {
                Modal_DisplayData(dataResponse);
                $("#Modal_Selected_Waiting").css("display", "none");
            })
            .fail(function (error) {
                alert('Error : ' + error.responseText);
            });
    }
    function Modal_DisplayData(dataview) {
        var zStyle_RecordView = "";
        //$("#Modal_Selected_Panel").html(JSON.stringify(dataview));
        var n = dataview.length;
        var zContent = "";
        for (i = 1; i < n; i++) {
            zContent += "<div class='row'>";
            zContent += "   <div class='col-12'>";
            zContent += "       <div class='input-group mb-2'>";
            zContent += "           <span class='input-group-text' style='width:120px'> " + dataview[i][0] + "</span>";
            zContent += "           <input type='text' class='form-control' value='" + dataview[i][2] + "' aria-label='' aria-describedby='button-addon2' > ";
            zContent += "           <button class='btn btn-primary' onclick='Modal_btn_Click(\"" + dataview[i][0] + "\")'><i class='uil-eye'> </i> </button>";
            zContent += "       </div>";
            zContent += "  </div>";
            zContent += "</div>";
        }
        $("#Modal_Selected_Panel").html(zContent);
    }
    function Modal_btn_Click(ID) {

        $("#txt_UserID").val(ID);
        $("#Modal_Selected_Form").modal('hide');
    }
</script>
