    <script>
        $(document).ready(function () {
            //document.body.setAttribute('data-sidebar-size', 'lg');
            $.ajax({
                url: "/Reports/Personal",
                type: "GET"
            }).done(function (data) {
                $("#txtAmountNoticeNotRead").html(data.noticeNotRead);
                $("#txtAmountTaskNotFinish").html(data.taskNotFinish);
                $("#txtEmployeeName").html(data.employeeName);

                $("#imgEmployeeAvatar").attr("src", data.employeeAvatar);
            })
                .fail(function (r) {
                    alert("error : " + r.responseText);
                })


        });

        function CallRefesh() {
            $.ajax({
                url: "/Reports/Personal",
                type: "GET"
            }).done(function (data) {
                $("#txtAmountNoticeNotRead").html(data.noticeNotRead);
                $("#txtAmountTaskNotFinish").html(data.taskNotFinish);
                $("#txtEmployeeName").html(data.employeeName);

                $("#imgEmployeeAvatar").attr("src", data.employeeAvatar);
            })
                .fail(function (r) {
                    alert("error : " + r.responseText);
                })
        }

    </script>
